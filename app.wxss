/*vip*/
.feaicon{display:inline-block;width:46px;height:46px;}
.any-body{padding-top:20px;}
.any-con{padding:10px 15px;}
.any-logo{padding:10px 0;}
.any-logo image{height: 70px;}
.any-feature{margin-top:8%;}
.play-video{width:100%;}
.play-body{padding:25px;font-size:14px;}
.play-tips{margin-bottom:20px;line-height:1.6;}
.play-url{margin-bottom:20px;padding:10px;background:#DDDDDD;border-radius:5px;white-space:normal;word-break: break-all;}
.play-copy{text-align:center;}
.play-copy .slbtn{padding:8px 25px;line-height:1;box-shadow:0 5px 20px 0 rgba(0,0,0,0.3);}
